@model HomeVM



<div class="row"><h1>@Model.Tytul</h1></div>
<div class="row">
    @foreach (var samochod in Model.Samochody)
    {


        <div class="col-sm-4 col-lg-4 col-md-4 col-md-offset-4">
            <div class="img-thumbnail">
                <img class="img-fluid" src="@samochod.MiniaturkaUrl" alt="" />
                <div class="figure-caption">
                    <h3 class="float-right">@samochod.Cena.ToString("c")</h3>
                    <h3>
                        <a asp-controller="Home" asp-action="Szczegoly" asp-route-id="@samochod.Id">@samochod.Marka</a> -@samochod.Model - @samochod.RokProdukcji

                    </h3>
                    <h4>
                        Przebieg : @samochod.Przebieg
                    </h4>
                    <h4>
                        Pojemność : @samochod.Pojemnosc
                    </h4>

                    <h4>
                        Moc : @samochod.Moc
                    </h4>

                    <p>@samochod.Opis</p>
                </div>

            </div>

        </div>

    }
</div>
